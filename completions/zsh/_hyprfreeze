#compdef hyprfreeze

_hyprfreeze() {
    local state
    local -a options

    _arguments -C \
        '-h[show help message]' \
        '--help[show help message]' \
        '-a[toggle suspend by active window]' \
        '--active[toggle suspend by active window]' \
        '-p[toggle suspend by process id]:pid:_pids' \
        '--pid[toggle suspend by process id]:pid:_pids' \
        '-n[toggle suspend by process name/command]:process name:_command_names' \
        '--name[toggle suspend by process name/command]:process name:_command_names' \
        '-r[toggle suspend by clicking on window]' \
        '--prop[toggle suspend by clicking on window]' \
        '-s[don'"'"'t send notification]' \
        '--silent[don'"'"'t send notification]' \
        '-t[notification timeout in milliseconds]:timeout:()' \
        '--notif-timeout[notification timeout in milliseconds]:timeout:()' \
        '--dry-run[doesn'"'"'t actually suspend/resume a process]' \
        '--debug[enable debug mode]' \
        '--no-xorg-workaround[skip the XWayland mouse capture workaround]' \
        '*::args:->args'

    case $state in
        args)
            # Additional argument completion if needed
            ;;
    esac
}

_hyprfreeze "$@"